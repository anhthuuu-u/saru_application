<!-- res/drawable/bubble_left.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#f0e9df" />
            <corners android:radius="15dp" />
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
    <item android:gravity="bottom|left" android:width="12dp" android:height="10dp">
        <shape android:shape="oval">
            <solid android:color="#f0e9df"/>
        </shape>
    </item>
</layer-list>
