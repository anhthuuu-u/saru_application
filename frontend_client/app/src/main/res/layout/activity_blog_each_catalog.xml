<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2E8DA"
    tools:context=".Blog_EachCatalogActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="21dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_back_arrow" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_extrabold"
            android:text="@string/title_blogeachcatalog_blogcatalogname_infor"
            android:textAlignment="center"
            android:textColor="#B16527"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="sans" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        app:srcCompat="@mipmap/img_blogeachcatalog_northwesttwo" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FDFAFA"
                android:orientation="vertical"
                android:layout_marginLeft="25dp">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    app:srcCompat="@mipmap/img_saru_cup"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/title_blog_blogtitle"
                    android:textColor="#F8BC3B"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/title_blog_blogcontent"
                    android:textSize="12sp"
                    android:textStyle="italic" />


                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:text="@string/title_blog_seemore"
                    android:textAlignment="textEnd"
                    android:textColor="#B16628"
                    android:textSize="10sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FDFAFA"
                android:orientation="vertical"
                android:layout_marginLeft="25dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    app:srcCompat="@mipmap/img_saru_cup"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/title_blog_blogtitle"
                    android:textColor="#F8BC3B"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/title_blog_blogcontent"
                    android:textSize="12sp"
                    android:textStyle="italic" />


                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:text="@string/title_blog_seemore"
                    android:textAlignment="textEnd"
                    android:textColor="#B16628"
                    android:textSize="10sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

</LinearLayout>