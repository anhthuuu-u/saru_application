<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2E8DA"
    tools:context=".Blog_ListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgEachCatalog_Back"
            android:layout_width="21dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_back_arrow" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="455dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:text="@string/title_blog_Blog"
            android:textAlignment="center"
            android:textColor="#B16527"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="sans" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/title_blog_catalog"
        android:textAlignment="viewStart"
        android:textColor="#B16527"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgBlog_CategoryNameInfo"
                android:layout_width="141dp"
                android:layout_height="126dp"
                app:srcCompat="@mipmap/img_taybacvillage" />

            <TextView
                android:id="@+id/txtBlog_CategoryNameInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_blog_inforTayBacWine"
                android:textColor="#85461F"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBlogList_SeemoreInfo"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/title_blog_seemore"
                android:textColor="#85461F"
                android:textSize="10sp"
                android:textStyle="italic" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/imgBlog_CategoryNameTips"
                android:layout_width="126dp"
                android:layout_height="113dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/img_taybacvillage" />

            <TextView
                android:id="@+id/txtBlog_CategoryNameTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="11dp"
                android:text="@string/title_blog_tips"
                android:textColor="#85461F"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBlogList_SeemoreTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/title_blog_seemore"
                android:textColor="#85461F"
                android:textSize="10sp"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/title_blog_suggestfyou"
        android:textColor="#B16527"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/imgBlog_Blog1"
            android:layout_width="157dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            app:srcCompat="@mipmap/img_saru_cup" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtBlog_BlogCatalogName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_blog_blogcatalog"
                android:textColor="#F8BC3B"
                android:textSize="10sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtBlog_BlogTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter"
                android:text="@string/title_blog_blogtitle"
                android:textColor="#F8BC3B"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBlog_BlogContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_tight"
                android:text="@string/title_blog_blogcontent"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtBlogList_SeemoreBlog1"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:text="@string/title_blog_seemore"
                android:textAlignment="textEnd"
                android:textColor="#85461F"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>