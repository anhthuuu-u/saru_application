<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_creamy_white"
    tools:context=".ProductComparison">

    <!-- ScrollView chứa nội dung chính -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Toolbar -->
            <LinearLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:orientation="horizontal"
                android:padding="@dimen/padding_small"
                tools:ignore="MissingConstraints">

                <ImageButton
                    android:id="@+id/btn_back_arrow"
                    android:layout_width="30dp"
                    android:layout_height="@dimen/filter_size_large"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    app:tint="@color/color_dark_brown"
                    android:backgroundTint="#00FFFFFF"
                    app:srcCompat="@mipmap/ic_back_arrow" />
                <ImageButton
                    android:layout_width="14dp"
                    android:layout_height="@dimen/filter_size_large"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    app:tint="@color/color_dark_brown"
                    android:backgroundTint="#00FFFFFF"/>

                <TextView
                    android:id="@+id/products_title_page"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_marginTop="@dimen/padding_standard"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/inter_bold"
                    android:paddingLeft="@dimen/product_detail_padding_left"
                    android:paddingRight="@dimen/product_detail_padding_right"
                    android:text="@string/title_product_comparison"
                    android:textAlignment="center"
                    android:textColor="@color/color_dark_brown"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_noti"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/icon_size_large"
                    android:layout_weight="1.3"
                    android:padding="@dimen/padding_small"
                    android:layout_marginTop="@dimen/padding_small"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="#00FFFFFF"
                    android:scaleType="fitCenter"
                    app:srcCompat="@mipmap/ic_noti"
                    app:tint="#F8BC3B" />

                <ImageButton
                    android:id="@+id/btn_cart"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/icon_cart_size_large"
                    android:padding="@dimen/padding_small"
                    android:layout_marginTop="@dimen/padding_small2"
                    android:layout_weight="1.3"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="#00FFFFFF"
                    android:scaleType="fitCenter"
                    app:srcCompat="@mipmap/ic_cart"
                    app:tint="#F8BC3B" />
            </LinearLayout>

            <!-- Subtitle -->

            <!-- Comparison Table -->

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/title_product_comparison_subtitle"
                android:textColor="@color/color_ochre"
                android:textSize="14sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar_layout" />

            <TableLayout
                android:id="@+id/comparison_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:stretchColumns="*"
                app:layout_constraintTop_toBottomOf="@id/subtitle"
                app:layout_constraintBottom_toTopOf="@id/button_clear_all"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Row 0: Product Images -->

                <!-- Row 1: Header -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/product_comparison_table">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="" />

                    <ImageView
                        android:id="@+id/image_product_1"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:contentDescription="Peach Wine Image"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/img_wine" />

                    <ImageView
                        android:id="@+id/image_product_2"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:contentDescription="Peach Wine (Peach) Image"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/img_wine" />

                    <ImageView
                        android:id="@+id/image_product_3"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:contentDescription="Rice Wine Image"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/img_wine" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/product_comparison_table">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:gravity="center"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/title_product_comparison_name"
                        android:textColor="@color/color_espresso"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Peach Wine"
                        android:textColor="@color/color_espresso"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Rice Wine"
                        android:textColor="@color/color_espresso"
                        android:textStyle="bold" />
                </TableRow>

                <!-- Row 2: Thương Hiệu -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/title_filter_product_dialog_brand"
                        android:textColor="@color/color_dark_brown"
                        android:background="@color/product_comparison_table"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XXXXX"
                        android:gravity="center"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XXXXX"
                        android:gravity="center"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XXXXX"
                        android:gravity="center"
                        android:padding="8dp" />
                </TableRow>

                <!-- Row 3: Đơn Mạnh -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/product_comparison_table"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/title_product_alcohol"
                        android:textColor="@color/color_dark_brown"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="XXXXX" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="XXXXX" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="XXXXX" />
                </TableRow>

                <!-- Row 4: Dung Tích -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/product_comparison_table"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/title_filter_product_dialog_volume"
                        android:textColor="@color/color_dark_brown"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XXXXX"
                        android:gravity="center"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XXXXX"
                        android:gravity="center"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XXXXX"
                        android:gravity="center"
                        android:padding="8dp" />
                </TableRow>

                <!-- Row 5: Loại Rượu -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/product_comparison_table"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/title_filter_product_dialog_wine_type"
                        android:textColor="@color/color_dark_brown"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XXXXX"
                        android:gravity="center"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XXXXX"
                        android:gravity="center"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XXXXX"
                        android:gravity="center"
                        android:padding="8dp" />
                </TableRow>

                <!-- Row 6: Nguồn Liệu -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/product_comparison_table"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/title_product_ingredients"
                        android:textColor="@color/color_dark_brown"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XXXXX"
                        android:gravity="center"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XXXXX"
                        android:gravity="center"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XXXXX"
                        android:gravity="center"
                        android:padding="8dp" />
                </TableRow>

                <!-- Row 7: Hương Vị -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/product_comparison_table"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/title_product_taste"
                        android:textColor="@color/color_dark_brown"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XXXXX"
                        android:gravity="center"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XXXXX"
                        android:gravity="center"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XXXXX"
                        android:gravity="center"
                        android:padding="8dp" />
                </TableRow>

                <!-- Row 8: Giá -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/product_comparison_table"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/title_product_comparison_price"
                        android:textColor="@color/color_dark_brown"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XXXXX"
                        android:gravity="center"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="XXXXX" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="XXXXX" />
                </TableRow>
            </TableLayout>

            <!-- Clear All Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_clear_all"
                android:layout_width="@dimen/comparison_button_width"
                android:layout_height="wrap_content"
                app:cornerRadius="5dp"
                android:backgroundTint="@color/color_golden_yellow"
                android:text="@string/title_delete_btn_comparison"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.94"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/CustomBottomNavStyle"
        app:itemTextColor="@color/black"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/menu_bottom_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>