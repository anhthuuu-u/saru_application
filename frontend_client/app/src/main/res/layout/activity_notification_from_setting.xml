<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E8DA"
    android:orientation="vertical"
    tools:context=".activities.Notification_FromSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgNotification_Back"
            android:layout_width="21dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_back_arrow" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_extrabold"
            android:text="@string/title_notification_notification"
            android:textAlignment="center"
            android:textColor="#B16527"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view2"
            android:layout_width="20dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F5F5">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtNotification_system"
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="@string/title_notification_system"
                    android:textAlignment="center"
                    android:textColor="#F8BC3B" />

                <TextView
                    android:id="@+id/txtNotification_order"
                    android:layout_width="196dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="@string/title_notification_order"
                    android:textAlignment="center" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtNotification_discount"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter"
                android:text="@string/title_notification_discount" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chkNotification_SelectAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="#F8BC3B"
            android:fontFamily="@font/inter"
            android:text="@string/title_notification_selectall"
            android:textColor="#F8BC3B"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNotification_DeleteAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="@string/title_notification_deleteall"
            android:textColor="#F8BC3B"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:id="@+id/lvNotification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"/>

</LinearLayout>