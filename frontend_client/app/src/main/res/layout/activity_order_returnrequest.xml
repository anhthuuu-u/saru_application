<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E8DA"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Back Arrow and Order Details Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ic_back_arrow"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_back_arrow"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="339dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="@string/return_request_title"
                android:textColor="#B16628"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Products Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_rounded_white"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="@string/product_label"
                android:textColor="#FBBC05"
                android:textSize="10sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/rounded_image"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_bold"
                            android:text="@string/product_name"
                            android:textColor="#85461F"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_light"
                            android:text="@string/product_brand_1"
                            android:textColor="#85461F"
                            android:textSize="8sp"
                            android:textStyle="italic"
                            android:layout_marginBottom="4dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_light"
                                android:text="@string/product_quantity_1"
                                android:textColor="#85461F"
                                android:textSize="8sp" />

                            <TextView
                                android:id="@+id/product_old_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:fontWeight="400"
                                android:text="@string/product_old_price_1"
                                android:textColor="#FBBC05"
                                android:textSize="8sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/inter_bold"
                                android:text="@string/product_price_1"
                                android:textColor="#85461F"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BBB3B3"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter"
                    android:text="@string/shipping_fee_label"
                    android:textColor="#000000"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/shipping_fee_value"
                    android:textColor="#85461F"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter"
                    android:text="@string/total_amount_label"
                    android:textColor="#000000"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/total_amount_value"
                    android:textColor="#85461F"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Request Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/reason_return_label"
            android:textColor="#FBBC05"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/request_type_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/radio_refunded"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="#FFC107"
                android:text="@string/request_refunded"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radio_returned"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="#FFC107"
                android:checked="true"
                android:text="@string/request_returned"
                android:textColor="@color/black" />
        </RadioGroup>

        <!-- Attach Media -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/attach_media_label"
            android:textColor="#FBBC05"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/media_placeholder"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#F0F0F0"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_camera"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_play" />
        </LinearLayout>

        <!-- Reason for Refund/Return -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/reason_return_label"
            android:textColor="#FBBC05"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/reason_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="3dp">

            <RadioButton
                android:id="@+id/reason_wrong_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reason_wrong_item"
                android:textColor="@color/black"
                android:buttonTint="#FBBC05"
                android:layout_marginBottom="3dp" />

            <RadioButton
                android:id="@+id/reason_not_as_expected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reason_not_as_expected"
                android:textColor="@color/black"
                android:buttonTint="#FBBC05"
                android:layout_marginBottom="8dp" />

            <RadioButton
                android:id="@+id/reason_not_meet_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reason_not_meet_request"
                android:textColor="@color/black"
                android:buttonTint="#FBBC05"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RadioButton
                    android:id="@+id/reason_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reason_return_other"
                    android:textColor="@color/black"
                    android:buttonTint="#FBBC05"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/other_reason_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/other_reason_hint"
                    android:background="@android:drawable/edit_text"
                    android:padding="8dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </RadioGroup>

        <!-- Amount to be Refunded -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/amount_refunded_label"
                android:fontFamily="@font/inter_semibold"
                android:textColor="#F8BC3B"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount_refunded_value"
                android:textSize="16sp"
                android:textColor="#8B4513" />
        </LinearLayout>

        <!-- Contact Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_rounded_white"
            android:padding="12dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/contact_shipping_title"
                android:textColor="#FBBC05"
                android:textSize="10sp"
                android:textStyle="bold" />

            <!-- Contact Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="@string/contact_name_value"
                android:textColor="#000000"
                android:layout_marginBottom="3dp"
                android:textSize="10sp" />

            <!-- Contact Phone -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="@string/contact_phone_value"
                android:layout_marginBottom="3dp"
                android:textColor="#000000"
                android:textSize="10sp" />

            <!-- Contact Address -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:layout_marginBottom="3dp"
                android:text="@string/contact_address_value"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_return_button"
            android:layout_width="149dp"
            android:layout_height="37dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:backgroundTint="#FFC107"
            android:fontFamily="@font/inter_bold"
            android:text="@string/return_submit_success"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>