<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_golden_yellow"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/item_spacing"
            app:cardCornerRadius="39dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@android:mipmap/sym_def_app_icon" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_standard"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_standard"
                android:layout_marginTop="@dimen/padding_standard"
                android:layout_weight="1"
                android:fontFamily="@font/inter"
                android:text="@string/homepage_menu_welcome"
                android:textColor="@color/color_authenciation"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_standard"
                android:layout_weight="1"
                android:fontFamily="@font/inter_extrabold"
                android:text="@string/homepage_menu_customer_name"
                android:textColor="@color/color_creamy_white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_item_homepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgHomepage"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.75"
            app:srcCompat="@mipmap/ic_home"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/txtHomepage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:fontFamily="@font/inter_bold"
            android:text="@string/title_homepage"
            android:textColor="@color/color_authenciation"
            android:textSize="16sp"
            android:layout_marginStart="2dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_item_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.77"
            app:srcCompat="@mipmap/ic_product"
            app:tint="@color/white"
            android:layout_width="0dp"
            />

        <TextView
            android:id="@+id/txtProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:fontFamily="@font/inter_bold"
            android:text="@string/homepage_menu_product"
            android:textColor="@color/color_authenciation"
            android:textSize="16sp"
            android:layout_marginStart="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_item_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imgCart"
            android:layout_height="20dp"
            android:layout_marginTop="0.7dp"
            android:layout_weight="0.75"
            app:srcCompat="@mipmap/ic_bag"
            app:tint="@color/white"
            android:layout_width="0dp"
            />

        <TextView
            android:id="@+id/txtCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:fontFamily="@font/inter_bold"
            android:text="@string/homepage_menu_cart"
            android:textColor="@color/color_authenciation"
            android:textSize="16sp"
            android:layout_marginStart="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_item_blog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imgBlog"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.7"
            app:srcCompat="@mipmap/ic_blog"
            app:tint="@color/white"
            android:layout_width="0dp"
            />

        <TextView
            android:id="@+id/txtBlog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:fontFamily="@font/inter_bold"
            android:text="@string/homepage_menu_blog"
            android:textColor="@color/color_authenciation"
            android:textSize="16sp"
            android:layout_marginStart="4.5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_item_faqs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imgFaqs"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.7"
            app:srcCompat="@mipmap/ic_faq"
            app:tint="@color/white"
            android:layout_width="0dp"/>

        <TextView
            android:id="@+id/txtFaqs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:fontFamily="@font/inter_bold"
            android:text="@string/homepage_menu_faqs"
            android:textColor="@color/color_authenciation"
            android:textSize="16sp"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_item_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imgAboutus"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.65"
            app:srcCompat="@mipmap/ic_about_us"
            app:tint="@color/white"
            android:layout_width="0dp"
            />

        <TextView
            android:id="@+id/txtAboutUs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:fontFamily="@font/inter_bold"
            android:text="@string/homepage_menu_about_us"
            android:textColor="@color/color_authenciation"
            android:textSize="16sp"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_item_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgNoti"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.67"
            app:srcCompat="@mipmap/ic_noti"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/txtNoti"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:fontFamily="@font/inter_bold"
            android:text="@string/homepage_menu_notification"
            android:textColor="@color/color_authenciation"
            android:textSize="16sp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

</LinearLayout>