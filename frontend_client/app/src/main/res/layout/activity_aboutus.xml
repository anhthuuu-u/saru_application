<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E8DA"
    android:orientation="vertical"
    tools:context=".Aboutus_SARUActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="21dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_back_arrow" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="455dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:text="@string/title_aboutus"
            android:textAlignment="center"
            android:textColor="#B16527"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="sans" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title_aboutus_saru_taybacwine"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_store_location"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title_aboutus_storelocation"
            android:textAlignment="center" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@mipmap/img_log_black_vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/title_aboutus_Founder"
        android:textColor="#AD6427"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView5"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:src="@mipmap/img_ceo"
                app:riv_corner_radius="100dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginLeft="0dp"
                android:text="@string/title_aboutus_CEO"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView7"
                android:layout_width="121dp"
                android:layout_height="100dp"
                android:src="@mipmap/img_cmo"
                app:riv_corner_radius="100dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="129dp"
                android:layout_height="24dp"
                android:text="@string/title_aboutus_CMO"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--            <ImageView-->
            <!--                android:id="@+id/imageView8"-->
            <!--                android:layout_width="173dp"-->
            <!--                android:layout_height="87dp"-->
            <!--                android:src="@mipmap/img_cfo" />-->

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@mipmap/img_cfo"
                app:riv_corner_radius="100dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/title_aboutus_CFO"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_marginLeft="70dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="159dp"
            android:layout_height="124dp"
            android:orientation="vertical">

            <!--            <ImageView-->
            <!--                android:id="@+id/imageView12"-->
            <!--                android:layout_width="157dp"-->
            <!--                android:layout_height="161dp"-->
            <!--                android:src="@mipmap/img_cto" />-->
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView12"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:src="@mipmap/img_cto"
                app:riv_corner_radius="100dp" />


            <TextView
                android:id="@+id/textView13"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:text="@string/title_aboutus_cto"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="176dp"
            android:layout_height="124dp"
            android:orientation="vertical">

            <!--            <ImageView-->
            <!--                android:id="@+id/imageView13"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="161dp"-->
            <!--                android:src="@mipmap/img_coo" />-->

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView13"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:src="@mipmap/img_coo"
                app:riv_corner_radius="100dp" />


            <TextView
                android:id="@+id/textView14"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="@string/title_aboutus_coo"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/title_aboutus_endpage"
        android:textColor="#A96126"
        android:textStyle="bold" />


</LinearLayout>