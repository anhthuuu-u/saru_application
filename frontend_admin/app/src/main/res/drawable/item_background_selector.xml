<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Light gray for pressed state -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Light gray for selected state -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White for default state -->
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#D0D0D0" /> <!-- Light border for default state -->
        </shape>
    </item>
</selector>