<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi EditText được focus -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#F5F5F5" /> <!-- Màu nền khi focus -->
            <stroke
                android:width="2dp"
                android:color="#2196F3" /> <!-- Viền xanh khi focus -->
            <corners android:radius="8dp" /> <!-- Bo góc -->
            <padding
                android:left="12dp"
                android:right="12dp"
                android:top="8dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <!-- Trạng thái bình thường (không focus) -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Màu nền bình thường -->
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" /> <!-- Viền xám nhạt -->
            <corners android:radius="8dp" /> <!-- Bo góc -->
            <padding
                android:left="12dp"
                android:right="12dp"
                android:top="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>