<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add/Edit Blog"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/edtBlogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Blog Title"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtBlogContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Blog Content"
            android:minLines="5"
            android:gravity="top"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtBlogImageUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Image URL"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerBlogCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Blog Category"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancelBlog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel" />

            <Button
                android:id="@+id/btnSaveBlog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>